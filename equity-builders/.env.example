# ──────────────────────────────────────────────
# Equity Builders — Environment Configuration
# ──────────────────────────────────────────────

# Database (Neon Postgres)
DATABASE_URL="postgresql://user:password@host:5432/equity_builders?sslmode=require"

# Authentication
JWT_SECRET="your-secure-jwt-secret-min-32-chars"
JWT_EXPIRES_IN="7d"

# AI / ATOS Intelligence Layer
# Supports OpenAI-compatible endpoints
ATOS_API_KEY="your-openai-api-key"
ATOS_MODEL="gpt-4o"
ATOS_API_URL="https://api.openai.com/v1"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Equity Builders"

# File Storage (S3-compatible)
STORAGE_ENDPOINT="https://your-s3-endpoint"
STORAGE_ACCESS_KEY="your-access-key"
STORAGE_SECRET_KEY="your-secret-key"
STORAGE_BUCKET="equity-builders-media"
